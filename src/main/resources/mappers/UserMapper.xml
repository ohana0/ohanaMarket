<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ohana0.ohanaMarket.user.repository.UserRepository">
	<select id="countLoginId">
		SELECT count(0)
		FROM `user`
		WHERE `loginId` = #{loginId}
	
	</select>
	<select id="countNickname">
		SELECT count(0)
		FROM `user`
		WHERE `nickname` = #{nickname}
	
	</select>
	<select id="getUserByLoginId" resultType="com.ohana0.ohanaMarket.user.domain.User">
		SELECT `id`,`loginId`,`password`,`nickname`,`profileImagePath`,`phoneNumber`,`introduce`,`region`
		FROM `user`
		WHERE `loginId` = #{loginId}
	</select>
	
	
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(`loginId`,`password`,`nickname`,`profileImagePath`,`region`,`phoneNumber`,`introduce`)
		VALUE
		(#{loginId},#{password},#{nickname},#{profileImagePath},#{region},#{phoneNumber},#{introduce})
	
	</insert>


</mapper>