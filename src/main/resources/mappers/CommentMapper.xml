<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ohana0.ohanaMarket.comment.repository.CommentRepository">
	<insert id="insertComment">
		INSERT INTO `comment`
		(`userId`,`postId`,`content`)
		VALUE
		(#{userId},#{postId},#{content})
	
	</insert>
	<select id="selectCommentByPostId">
		SELECT `userId`,`postId`,`content`
		FROM `comment`
		WHERE `postId` = #{postId}
	</select>
	<select id="countCommentByPostId" resultType="int">
		SELECT count(0)
		FROM `comment`
		WHERE `postId`=#{postId}
	</select>
	<delete id="deleteCommentByPostId" parameterType="int">
		DELETE FROM `comment`
		WHERE `postId`=#{postId}
	</delete>
</mapper>