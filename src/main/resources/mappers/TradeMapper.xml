<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ohana0.ohanaMarket.trade.repository.TradeRepository">
	<select id="getTradeList">

		SELECT `id`,`userId`,`title`,`content`,`price`,`type`,`tradeLocation`,`state`,`createdAt`,`updatedAt`
		FROM `trade`
		ORDER BY `id` DESC
		LIMIT 10
	</select>
	
	<insert id="insertTradeGetId" parameterType="com.ohana0.ohanaMarket.trade.domain.Trade"
	useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `trade`
		(`userId`,`title`,`content`,`price`,`type`,`tradeLocation`,`state`,`createdAt`,`updatedAt`)
		VALUES
		(#{userId},#{title},#{content},#{price},#{type},#{tradeLocation},#{state},now(),now());
	</insert>
	
	<select id="selectTradeById" parameterType="int" resultType="com.ohana0.ohanaMarket.trade.domain.Trade">
		SELECT `id`,`userId`,`title`,`content`,`price`,`type`,`tradeLocation`,`state`,`createdAt`,`updatedAt`
		FROM `trade`
		WHERE `id`=#{postId}
	</select>
	

</mapper>