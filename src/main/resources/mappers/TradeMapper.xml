<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ohana0.ohanaMarket.trade.repository.TradeRepository">
	<select id="getTradeList">

		SELECT `id`,`userId`,`title`,`content`,`price`,`type`,`tradeLocation`,`state`,`createdAt`,`updatedAt`
		FROM `trade`
		ORDER BY `id` DESC
		
	</select>
	
	<insert id="insertTradeGetId" parameterType="com.ohana0.ohanaMarket.trade.domain.Trade"
	useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `trade`
		(`userId`,`title`,`content`,`price`,`type`,`tradeLocation`,`state`,`createdAt`,`updatedAt`)
		VALUES
		(#{userId},#{title},#{content},#{price},#{type},#{tradeLocation},#{state},now(),now());
	</insert>
	
	<select id="selectTradeById" parameterType="int" resultType="com.ohana0.ohanaMarket.trade.domain.Trade">
		SELECT `id`,`userId`,`title`,`content`,`price`,`type`,`tradeLocation`,`state`,`createdAt`,`updatedAt`
		FROM `trade`
		WHERE `id`=#{postId}
	</select>
	<delete id="deletePost" parameterType="int">
		DELETE FROM `trade`
		WHERE `id`= #{postId}
	</delete>
	<update id="updateState" parameterType="map">
		UPDATE `trade`
		SET `state`=#{state} 
		WHERE `id`=#{id}
	
	</update>
	<select id="selectTradeByKeyWord" parameterType="String" resultType="com.ohana0.ohanaMarket.trade.domain.Trade">
		SELECT `id`,`userId`,`title`,`content`,`price`,`type`,`tradeLocation`,`state`,`createdAt`,`updatedAt`
		FROM `trade`
		WHERE `title` LIKE '%${keyWord}%'
		ORDER BY `id` DESC	
	</select>
	<select id="selectTradeByUserId" parameterType="int" resultType="com.ohana0.ohanaMarket.trade.domain.Trade">
		SELECT `id`,`userId`,`title`,`content`,`price`,`type`,`tradeLocation`,`state`,`createdAt`,`updatedAt`
		FROM `trade`
		WHERE `userId`=#{userId}
		ORDER BY `id` DESC
	
	</select>
	<select id="selectTradeByRegion" parameterType="String" resultType="com.ohana0.ohanaMarket.trade.domain.Trade">
		SELECT `id`,`userId`,`title`,`content`,`price`,`type`,`tradeLocation`,`state`,`createdAt`,`updatedAt`
		FROM `trade`
		WHERE `tradeLocation` LIKE '%${region}%'
		ORDER BY `id` DESC		
	</select>
	<update id="updateTrade"  parameterType="com.ohana0.ohanaMarket.trade.domain.Trade">
		UPDATE `trade`
		SET `title`=#{title},`content`=#{content},`price`=#{price},`type`=#{type},`tradeLocation`=#{tradeLocation},`state`=#{state},`updatedAt`=now()
		WHERE `id`=#{id}
	
	</update>

</mapper>