<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ohana0.ohanaMarket.post.repository.PostRepository">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(`userId`,`title`,`content`)
		VALUE
		(#{userId},#{title},#{content})
	
	</insert>
	<select id="selectPost">
		SELECT `id`, `title`,`content`,`userId`,`createdAt`
		FROM `post`
		ORDER BY `id` DESC
	</select>
	<select id="selectPostById" resultType="com.ohana0.ohanaMarket.post.domain.Post" parameterType="int">
		SELECT `id`,`title`,`content`,`userId`,`createdAt`
		FROM `post`
		WHERE `id`=#{id}
	</select>
	<delete id="deletePost" parameterType="int">
		DELETE FROM `post`
		WHERE `id`=#{id}
	</delete>
	<update id="updatePost" parameterType="map">
		UPDATE `post`
		SET `title`= #{title},`content`=#{content}, `updatedAt`=now()
		WHERE `id`=#{postId}
	</update>


</mapper>