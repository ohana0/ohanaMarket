<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ohana0.ohanaMarket.post.repository.PostRepository">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(`userId`,`title`,`content`)
		VALUE
		(#{userId},#{title},#{content})
	
	</insert>
	<select id="selectPost">
		SELECT `title`,`content`,`userId` 
		FROM `post`
	</select>
	<select id="selectPostById" resultType="com.ohana0.ohanaMarket.post.domain.Post" parameterType="int">
		SELECT `title`,`content`,`userId` 
		FROM `post`
		WHERE `id`=#{id}
	</select>


</mapper>